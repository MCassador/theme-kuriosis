
{{- 'swiper.min.css' | asset_url | stylesheet_tag -}}
<script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer></script>

{%- liquid
  assign disable_top_spacing = section.settings.disable_top_spacing
  assign disable_bottom_spacing = section.settings.disable_bottom_spacing
  assign max_width = section.settings.max_width
  assign text_color = section.settings.text_color
  assign bg_color = section.settings.bg_color
-%}

<div style="max-width: {{ max_width }}; margin-left: auto; margin-right: auto;">
  <div class="curated-with-passion-row" style="background-color: {{ bg_color }};">

    <div class="row">
      <div class="small-12 medium-6">

          {%- if section.settings.heading -%}
            <{{ section.settings.heading_tag }} style="margin-bottom: 0.5rem;" class="h2">
              {{ section.settings.heading }}
            </{{ section.settings.heading_tag }}>
          {%- endif -%}

          {%- if section.settings.heading_sub -%}
            <div class="heading-sub proza-libre">
              {{ section.settings.heading_sub }}
            </div>
          {%- endif -%}
      </div>
      <div class="small-12 medium-6">
          <!-- swiper -->
          <div class="swiper kuriosis-curated-swiper">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                <div class="swiper-slide">
                  {{ block.settings.image_passion | image_url: width: 1000 | image_tag }}
                </div>
              {% endfor %}
            </div>
            <!-- Add navigation arrows -->
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
          </div>
          
        </div>
      </div>

    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const swiperContainer = document.querySelector('.kuriosis-curated-swiper');
      if (swiperContainer) {
        const slides = swiperContainer.querySelectorAll('.swiper-slide');
        if (slides.length > 0) {
          new Swiper(swiperContainer, {
            slidesPerView: 1.5,
            spaceBetween: 20,
            navigation: {
              nextEl: '.swiper-button-next',
              prevEl: '.swiper-button-prev',
            },
            breakpoints: {
              768: {
                slidesPerView: 2.5,
                spaceBetween: 25,
              },
              1024: {
                slidesPerView: 2.5,
                spaceBetween: 30,
              }
            }
          });
        }
      }
    });
  </script>

{% schema %}
{
  "name": "Kuriosis Curated",
  "class": "kuriosis-curated-with-passion",
  "settings": [
    {
      "type": "select",
      "id": "heading_tag",
      "label": "Heading Tag",
      "default": "h2",
      "options": [
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        },
        {
          "value": "h4",
          "label": "H4"
        }
      ]
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Curated with Passion"
    },
    {
      "type": "richtext",
      "id": "heading_sub",
      "label": "Heading Sub",
      "default": "<p>At Kuriosis, we take pride in curating and producing fine art prints that showcase exceptional quality and craftsmanshipâ€”celebrating the thrill of discovering new art and the joy of collecting something truly unique.</p>"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#E0DFD6"
    },

    {
      "type": "text",
      "id": "max_width",
      "label": "Max Width",
      "default": "1600px",
      "info": "Set the maximum width of the section (e.g., 100px or 100%)"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [

        {
          "type": "image_picker",
          "id": "image_passion",
          "label": "Image Passion"
        },
 
      ]
    }
  ],
  "presets": [
    {
      "name": "Kuriosis Curated with Passion",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ],
  "enabled_on": {
    "templates": ["*"],
    "groups": [
      "header", "footer"
    ]
  }
}
{% endschema %}